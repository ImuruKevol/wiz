                        a.btn.btn-square.btn-sm.p-2(href="" ng-click="commit.change('js')" ng-class="commit.view == 'js' ? 'btn-white' : 'btn-dark'") JS
                        a.btn.btn-square.btn-sm.p-2(href="" ng-click="commit.change('css')" ng-class="commit.view == 'css' ? 'btn-white' : 'btn-dark'") CSS

                    div(ng-model="commit.diff" ui-monaco-opts="commit.monaco" ui-monaco-diff)

            div(data-split-pane data-split-pane-properties="properties.horizonal" ng-show="options.panel != 'commit'")
                div(data-split-pane-component data-height="100%")
                    div(data-split-pane data-split-pane-properties="properties.vertical_1_1")
                        div(data-split-pane-component data-width="34%")
                            +codearea('tab1')
                        div(data-split-pane-divider data-width="3px")
                        div(data-split-pane-component data-width="66%")
                            div(data-split-pane data-split-pane-properties="properties.vertical_1_2")
