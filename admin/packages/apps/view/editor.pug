                                span.nav-link-title.bold(style="font-size: 14px;")
                                    i.fas.fa-times
    
    div(data-split-pane data-split-pane-properties="layout.viewstate.root")
        .bg-dark(data-split-pane-component data-width="360px")
            .menu-layout.p-3
                .btn-group.w-100.mb-3
                    button.btn(type="button" ng-repeat="item in workspace.list" style="width: 50%;" class="{{workspace.active_workspace == item.id ? 'btn-white' : 'btn-dark'}}" ng-click="item.active()") {{item.name}}

                .tree-container(ng-show="workspace.active_workspace == workspace.list[2].id")
                    .card.card-sm.mb-4
                        .card-body.text-dark
                            label.form-label New Commit
                            input.form-control.mb-1(type='text' placeholder='Version Name' ng-model="commit.data.version_name" ng-enter="commit.event.save(commit.data)" autocomplete='off')
                            textarea.mb-2.form-control(placeholder='Commit Message' ng-model="commit.data.version_message" rows=3)
                            button.btn.btn-dark.btn-block(ng-click="commit.event.save(commit.data)") Commit

                    .card.card-sm.mb-3
                        table.table.board-table.table-hover.mb-0
                            tbody
                                tr.cursor-pointer(ng-repeat="item in commit.logs" class="{{item.version == commit.target.selected.version ? 'bg-green-lt' : (item.version == commit.target.diff.version ? 'bg-red-lt' : '')}}")
                                    td.w-1.p-1.pl-3.text-dark(style="font-size: 14px;")
                                        input(type="checkbox" ng-checked="commit.target.diff.version == item.version" ng-click="commit.event.diff(item)" autocomplete='off')
                                    td.w-1.p-1.pr-3.text-dark(style="font-size: 14px;" ng-click="commit.event.item(item)") {{item.version_name ? item.version_name : item.version}}
                                    td.p-1.pr-3.pl-3.text-dark(style="font-size: 14px; white-space: nowrap; overflow: hidden;" ng-click="commit.event.item(item)")
                                        span.text-muted {{item.version_message}}


                .tree-container(ng-show="workspace.active_workspace == workspace.list[1].id")
                    .input-icon.mb-3
                        input.form-control#search(type="text" placeholder="Searchâ€¦" style="color: #545d6d !important;" ng-model="browse.searchvalue" ng-change="browse.search(browse.searchvalue)" autocomplete='off')
                        span.input-icon-addon
                            svg.icon(xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round")
                                path(stroke="none" d="M0 0h24v24H0z")
                                circle(cx="10" cy="10" r="7")
                                line(x1="21" y1="21" x2="15" y2="15")

                    .root-tree.mb-1(ng-repeat="item in browse.data" class="{{item.package.id == app.id ? 'active' : ''}}" ng-click="browse.select(item)" ng-if="!item.hide")
                        .root-title
                            table
                                tr 
                                    td.w-1(style="vertical-align: top;")
                                        i.fas.fa-code.mr-2
                                    td(style="line-height: 1;")
                                        span {{item.package.title}}
                                        br
                                        span.namespace {{item.package.namespace}}
                    
                    a.root-tree.mb-1(href="/wiz/admin/packages/apps/editor/new")
                        .root-title.text-center.p-1.text-white
                            i.fas.fa-plus.mr-2 
                            span Create New App

                div(ng-show="workspace.active_workspace == workspace.list[0].id")
                    .card.card-sm.mb-3
                        .card-body
                            label.form-label(style="font-family: 'MAIN-EB'") Title
                            input.form-control(type='text' placeholder='App Title' ng-model="app.data.package.title" autocomplete='off')

                    .card.card-sm.mb-3
                        .card-body
                            label.form-label(style="font-family: 'MAIN-EB'") Base Controller
                            select.form-select(ng-model="app.data.package.controller")
                                option(value="{{c}}" ng-repeat="c in extdata.controller") {{c}}
                    
                    .card.card-sm.mb-3
                        .card-body
                            label.form-label(style="font-family: 'MAIN-EB'") Route
                            input.form-control(type='text' placeholder='/board/<category>/list' ng-model="app.data.package.route" autocomplete='off')
                    
                    .card.card-sm.mb-3
                        .card-body
                            label.form-label(style="font-family: 'MAIN-EB'") View URI
                            input.form-control(type='text' placeholder='/board/notice/list' ng-model="app.data.package.viewuri" autocomplete='off')

                    .hr.bg-white
                    
                    h3.text-white Code Layout

                    .text-center.mb-4
                        .layout-selector.p-2(ng-class="layout.active_layout == 1 ? 'active' : ''" ng-click="layout.change(1)")
                            .layout-icon
                                .layout-row
                                    .layout-column

                        .layout-selector.p-2(ng-class="layout.active_layout == 2 ? 'active' : ''" ng-click="layout.change(2)")
                            .layout-icon
                                .layout-row
                                    .layout-column
                                    .layout-column

                        .layout-selector.p-2(ng-class="layout.active_layout == 3 ? 'active' : ''" ng-click="layout.change(3)")
                            .layout-icon
                                .layout-row
                                    .layout-column
                                    .layout-column
                                    .layout-column
                        br
                        .layout-selector.p-2(ng-class="layout.active_layout == 4 ? 'active' : ''" ng-click="layout.change(4)")
                            .layout-icon.rows-2
                                .layout-row
                                    .layout-column
                                .layout-row
                                    .layout-column

                        .layout-selector.p-2(ng-class="layout.active_layout == 5 ? 'active' : ''" ng-click="layout.change(5)")
                            .layout-icon.rows-2
                                .layout-row
                                    .layout-column
                                    .layout-column
                                .layout-row
                                    .layout-column

                        .layout-selector.p-2(ng-class="layout.active_layout == 6 ? 'active' : ''" ng-click="layout.change(6)")
                            .layout-icon.rows-2
                                .layout-row
                                    .layout-column
                                    .layout-column
                                    .layout-column
                                .layout-row
                                    .layout-column

                    .button-container
                        button.btn.btn-white.btn-block.mb-3(ng-click="modal.keymaps()") 
                            i.fas.fa-keyboard
                            span.ml-2 Shortcuts

                    .hr.bg-white

                    .button-container
                        button.btn.btn-white.btn-block.mb-3(ng-click="event.select_file()") 
                            i.fas.fa-upload
                            span.ml-2 Import

                        a.btn.btn-white.btn-block.mb-3(href="/wiz/export/{{ app.id }}" target="_blank")
                            i.fas.fa-download
                            span.ml-2 Export

