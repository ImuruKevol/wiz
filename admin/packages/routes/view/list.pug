mixin content()
    .container.pt-4.pb-4
        .page-header
            .row.align-items-center
                .col-auto
                    .page-pretitle SEASON WIZ
                    h2.page-title Routes

                .col-auto.ml-auto.d-print-none
                    .d-flex
                        input.form-control(type="text" placeholder="Search..." ng-model="search.text" ng-enter="event.search()" style="width: 240px;")
                        a.btn.btn-light.ml-2.d-none.d-sm-inline-block(href='#' style="width: 140px;" ng-click="event.search()")
                            i.mr-2.fas.fa-search
                            | Search
                        a.btn.btn-light.pr-4.pl-4.ml-2(href='/wiz/admin/packages/routes/editor/new' style="width: 140px;") 
                            i.mr-2.fas.fa-plus
                            | Create

        .overflow-x
            table.table.board-table.table-hover.mb-0
                thead 
                    tr
                        th.text-left.width-1.pr-2.pl-2 ID
                        th.text-left.width-1.pr-2.pl-2 Route
                        th.text-left Title
                        th.text-center.width-2.pr-2.pl-2 Created

                tbody
                    tr(ng-if="list.length == 0")
                        td.text-center(colspan=4) Route is not finded. create Route.

                    tr(ng-repeat="item in list")
                        td.width-1.pr-2.pl-2
                            a(ng-href="/wiz/admin/packages/routes/editor/{{item.package.id}}") {{item.package.namespace ? item.package.namespace : item.package.id.substring(0,8)}}
                        td.text-left.width-1.pr-2.pl-2
                            a(ng-href="/wiz/admin/packages/routes/editor/{{item.package.id}}") {{item.package.route}}
                        td
                            a(ng-href="/wiz/admin/packages/routes/editor/{{item.package.id}}") {{item.package.title}}
                        td.text-center.width-2.pr-2.pl-2 {{item.package.created.substring(0,10)}}                
                       
include wiz/theme/layout
+layout
